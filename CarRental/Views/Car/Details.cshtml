@model Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Make @Model.Model">
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">@Model.Make @Model.Model</h1>
            <div class="mb-3">
                <strong>City:</strong> @Model.City
            </div>
            <div class="mb-3">
                <strong>Price per Day:</strong> $@Model.PricePerDay
            </div>
            <a asp-controller="Reservation" asp-action"AddReservation" asp-route-id="@Model.Id" class="btn btn-primary">Rent Now</a>
        </div>
    </div>
</div>
