@model Reservation


<div class="container my-5">
    <h3 class="">
        Reservation Nº @Model.Id
    </h3>
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">Car: @Model.Car.Make</h4>
            <div class="mb-3">@Model.Car.Model</div>
            <div class="mb-3">@Model.Car.City</div>
            <div class="mb-3">@Model.Car.PricePerDay</div>
        </div>
        <div>
            <p class="button">
                <a class=" btn btn-warning" asp-controller="Reservation" asp-action="RemoveReservation" asp-route-id="@Model.Id">Remove this reservation</a>
            </p>
        </div>
    </div>
</div>